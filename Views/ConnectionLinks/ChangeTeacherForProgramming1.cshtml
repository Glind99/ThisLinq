@model IEnumerable<ThisLinq.Models.Teacher>

@{
    ViewData["Title"] = "Change Teacher for Programming 1";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="ConnectionLinks" asp-action="ChangeTeacherForProgramming1" method="post">
    <div class="form-group">
        <label for="newTeacherId">Select New Teacher:</label>
        <select id="newTeacherId" name="newTeacherId" class="form-control">
            @foreach (var teacher in Model)
            {
                <option value="@teacher.TeacherId">@teacher.FirstName @teacher.LastName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>


