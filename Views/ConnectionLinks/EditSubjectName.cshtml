@model ThisLinq.Models.Course

@{
    ViewData["Title"] = "Edit Subject Name";
}

<h1>Edit Subject Name</h1>

<form asp-controller="ConnectionLinks" asp-action="EditSubjectName" method="post">
    <div class="form-group">
        <label>Select Subject:</label>
        <select asp-for="CourseId" class="form-control" asp-items="@ViewBag.Courses"></select>
    </div>
    <div class="form-group">
        <label>New Subject Name:</label>
        <input asp-for="CourseName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>


